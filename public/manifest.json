{
  "manifest_version": 3,
  "name": "DOM SHOT",
  "description": "DOM SHOT with transparent background",
  "version": "0.1.4",
  "action": {
    "default_icon": "logo.png"
  },
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "declarativeNetRequest"
  ],
  "commands": {
    "_execute_action": {}
  },
  "content_scripts": [
    {
      "js": [
        "index.js"
      ],
      "matches": [
        "file:///",
        "https://*/*",
        "https://*/",
        "http://*/*",
        "http://*/"
      ]
    }
  ]
}